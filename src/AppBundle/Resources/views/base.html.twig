<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}CoopCycle - {{ 'meta.title'|trans }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans:400,700">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Raleway:400,700">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% block styles %}{% endblock %}
  </head>
  <body>
    {% include "AppBundle::menu.html.twig" %}
    {% block banner %}
      {% if is_demo %}
        <section id="banner">
          <div class="container">
            <div class="row">
              <div class="col-md-8 col-md-offset-2 text-center">
                <h3>{{ 'demo.disclaimer'|trans|raw }}</h3>
                <h4 class="hidden-xs">{{ 'demo.disclaimer.subtitle'|trans|raw }}</h4>
              </div>
            </div>
          </div>
        </section>
      {% endif %}
    {% endblock %}
    {% block body %}{% endblock %}
    <footer>
      <div class="container text-center">
        <ul class="list-inline">
          <li>
            <a href="#" target="_blank">
              {% trans %}Contact us{% endtrans %}
            </a>
          </li>
          <li>
            <a href="#" target="_blank">
              {% trans %}Terms of service{% endtrans %}
            </a>
          </li>
        </ul>
      </div>
    </footer>
    {% if app.environment == "prod" %}
      <script src="https://cdn.ravenjs.com/3.19.1/raven.min.js" crossorigin="anonymous"></script>
      <script>
        Raven.config("{{ sentry_public_dsn }}").install();
      </script>
    {% endif %}
    <script>
      window.AppData = window.AppData || {};
      window.AppData.countryIso = "{{ country_iso }}";
    </script>
    <script src="{{ asset('js/common.js') }}"></script>
    <script>
    window.AppData = window.AppData || {};
    {% set sessionCart = app.session.get('cart') %}
    {% if sessionCart is not null %}{% set sessionRestaurant = sessionCart.restaurant %}{% endif %}
    {% if cart is not defined %}
      window.AppData.Cart = {
        addToCartURL: null,
        removeFromCartURL: null,
        items: null,
        date: null,
        validateCartURL: null,
        restaurantURL: null,
        minimumCartAmount: {% if sessionRestaurant is defined %}parseFloat("{{ sessionRestaurant.minimumCartAmount }}"){% else %}null{% endif %},
        flatDeliveryPrice: {% if sessionRestaurant is defined %}parseFloat("{{ sessionRestaurant.flatDeliveryPrice }}"){% else %}null{% endif %}
      };
      window.AppData.restaurantId = null,
    {% elseif cart is defined %}
      window.AppData.availabilities = {{ restaurant.availabilities|json_encode()|raw }};
      window.AppData.Cart = {
        addToCartURL: "{{ path('restaurant_add_to_cart', {'id': restaurant.id})|raw }}",
        removeFromCartURL: "{{ path('restaurant_remove_from_cart', {'id': restaurant.id, 'itemKey': '__ITEM_KEY__'})|raw }}",
        items: {{ cart.normalizedItems|json_encode()|raw }},
        date: {% if cart.date is not empty %}"{{ cart.date|date('Y-m-d H:i:s') }}"{% else %}null{% endif %},
        validateCartURL: "{{ path('order') }}",
        restaurantURL: "{{ path('restaurant', {'id': restaurant.id})|raw }}",
        minimumCartAmount: parseFloat("{{ restaurant.minimumCartAmount }}"),
        flatDeliveryPrice: parseFloat("{{ restaurant.flatDeliveryPrice }}")
        };
      window.AppData.restaurantId = {{restaurant.id}},
    {% endif %}
      window.AppData.sessionCartRestaurantId = {% if sessionRestaurant is defined %}{{sessionRestaurant.id}}{% else %}null{% endif %};
      window.AppData.sessionCartTotal = {% if sessionCart is not null %}{{sessionCart.total}}{% else %}null{% endif %};
      window.AppData.topCartRedirectURL =  {% if sessionRestaurant is defined %}"{{ path('restaurant', {'id': sessionRestaurant.id})|raw }}"{% else %}null{% endif %};
      window.__i18n = {
          "Cart": "{% trans %}Cart{% endtrans %}",
          "cart.widget.button": "{% trans %}My order{% endtrans %}"
      }
    </script>
    <script src="{{ asset('js/cart.js') }}"></script>
    {% block scripts %}{% endblock %}
    {% if app.environment == "dev" %}
      <script src="{{ asset('webpack-dev-server.js') }}"></script>
    {% endif %}
    {{ piwik_code() }}
  </body>
</html>
